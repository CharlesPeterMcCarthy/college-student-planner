<Window x:Class="StudentPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentPlanner"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="AUTO"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Name="stkpNav" Background="Gray" Grid.Column="0" HorizontalAlignment="Center">
            <TextBlock Name="tblkPlanner" Text="My Planner" Margin="10" MouseDown="TblkPlanner_MouseDown" />
            <TextBlock Name="tblkAdd" Text="Add Task" Margin="10" MouseDown="TblkAdd_MouseDown" />
        </StackPanel>

        <Frame Name="mainFrame" Grid.Column="1" Source="MyPlanner.xaml" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
